<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <include layout="@layout/layout_second_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:background="@color/color_light_grey">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/shape_corner_white"
            app:cardCornerRadius="@dimen/dp_10">

            <ImageView
                android:id="@+id/big_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/iv_picture_crop_tag_img"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/color_content"
                    android:text="添加图片"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_5"
                    android:textColor="@color/color_content"
                    android:textSize="@dimen/sp_13"
                    android:text="图片大小不要超过4MB"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <include layout="@layout/layout_second_bottom"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>